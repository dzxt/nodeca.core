// Protect width change between pages nevigation
//
body
  overflow-y scroll
  min-width 200px


// Horizontal comma-separated list
//
.hlist
  margin 0
  > li
    display inline-block
    // ie7 margin dirty fix (no :after -> artificial margin)
    *margin-right .8em

    &:after
      content ','
      margin-right .5em
    &:last-child:after
      content " "

// the same, but for definitions
.def-hlist
    margin 0
    > dt
      font-weight: normal
      display inline-block
    > dd
      display inline-block
      &:after
        content ","
      &:last-child:after
        content ""


// Universal container for page info
//
.page-summary
  margin-top 20px
  padding: 20px
  background-color #fbfbfb
  border-radius 4px
  border 1px solid #eee
  border 1px solid rgba(0,0,0,.05)
  box-shadow 0 0px 2px rgba(0,0,0,.05)
  color grayLight
  font-family sansWideFontFamily
  > dt
    font-weight normal
    color grayDark
    font-size 13px
  > dd + dt
    margin-top 10px
  > dd
    font-size 12px
    &.small
      font-size 11px


// Page footer styles
//
.page-footer
  margin-top 50px
  border-top 1px solid grayLightest
  padding-top 10px

.page-footer-nav
  margin 0
  > li
    margin-right 1em
    display block
    float left
    > a
      display block
      padding 4px 0
  .dropdown-toggle .caret
    margin-top 8px
    margin-left 2px
    opacity .3

.copyright
  font-size 12px
  opacity .7


// Page title & description
//
.page-head
  max-width 700px
  margin-bottom 10px
  > p
    font-size 12px
    color grayLighter
    margin-top -(baseLineHeight/2)
    margin-bottom baseLineHeight*0.75


// Toolbar with buttons
//
.controlbar
  padding 10px 15px 10px
  background-color #fbfbfb
  border-radius 4px
  border 1px solid #eee
  border 1px solid rgba(0,0,0,.05)
  box-shadow 0 0px 2px rgba(0,0,0,.05)
  color grayLight
  margin-top 0
  margin-bottom 0
// preserve space, when control become float
.controlbar-keeper
  height: 52px
// floating params
.floatbar-fixed
  position: fixed
  top 0
  left 0
  right 0
  z-index 1000

  background-color #fbfbfb
  border-bottom 1px solid grayLighter
  border-bottom 1px solid rgba(0,0,0,.25)
  box-shadow 0 2px 2px rgba(0,0,0,.15)
  padding 0 20px

  // tweak floating options
  .controlbar
    border 0 none
    box-shadow none
    padding-left 0
    padding-right 0

// Pagination
//
.pagination
  display: inline-block
  font-size 12px
  padding 5px 0
  > li
    display: inline-block
    > a
      display inline-block
      transition background-color 0.3s ease
      border-radius 2px
      color grayDark
      padding 0 9px
      line-height 20px
      &:hover
        background-color grayLighter
      &.more
        padding: 0 3px;
      &.current
        background-color grayDark
        color white
        font-weight bold
        text-decoration none
        box-shadow 0 0 1px gray
        &:hover
          background-color gray          
    > .dropdown-menu
      min-width:0
      padding 7px 10px
.btn-group > .pagination
  float left
  margin 0

label.pgn-jump
  margin-bottom 0


// Communication notice
//
#notice
  position fixed
  top 50px
  left 50%
  z-index 2000

  padding 3px 20px 3px 15px
  background-color #fcf8e3
  border 1px solid darken(#fcf8e3, 50%)
  font-size 12px
  color black
  width 140px
  margin-left -70px
  box-sizing border-box

  > .close
    font-size 18px
    top 0
    right -15px
    //margin-left 10px


// Forms
//
.well-form
  background-color white
  box-shadow 0 0 10px grayLighter


// Debug area
//
.debug
  margin-top 20px
  padding 20px 20px 0
  background-color #fbfbf8  
  border 1px solid #eee
  border 1px solid rgba(0,0,0,.05)
  box-shadow 0 -2px 2px rgba(0,0,0,.05)
  font-family sansWideFontFamily
  font-size 12px
  color #888

#debug_timeline
  ul
    list-style none
  & > ul
    margin-left 0

.timeline-period
  color #444


// Capcha
//
.capcha-reload
  text-align right
  font-size 80%
.capcha-image
  margin-bottom 5px !important


// "No JS" message styles
//
.nojs
  display none
  left 50%
  width 500px
  margin-left -250px
  text-align center
  position absolute
  top 90px
  font-size 36px
  font-weight bold
  line-height 1.5

.no-js .nojs
  display block