@keyframes notification
  0%
    transform rotateY(-90deg)
    opacity 0
  70%
    transform rotateY(20deg)
    opacity .8
  90%
    transform rotateY(-10deg)
    opacity 1
  100%
    transform rotateY(-0deg)
    opacity: 1

.notifications
  position fixed

  &.top-right
    right 10px
    top 10px

  // override default opacity
  .fade.in
    opacity .95

  & > .alert
    position: relative;
    z-index 9999
    margin 5px 0px

    max-width 300px
    max-height 300px
    overflow auto
    text-shadow none

    animation notification .75s linear

  & > .alert-error
    color white
    background-color btnDangerBackgroundHighlight
    border-color btnDangerBackgroundHighlight
    box-shadow 0 0 5px btnDangerBackgroundHighlight

    & > .close
      color white
      text-shadow 0 1px 0 black

  & > .alert-info
    color white
    background-color grayDark
    border-color grayDark
    box-shadow 0 0 5px grayDark

    & > .close
      color white
      text-shadow 0 1px 0 black
