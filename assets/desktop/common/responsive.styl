
// Fix menu elements

@media (max-width: 979px)

  //Move logo to left on narrow screens
  .navbar .brand
    float left
    padding-left 10px

  // update search icon's offset
  .navbar-search
    .icon-search
      top 16px
      left 23px

  // remove active item underline
  .navbar .nav .active
    &:before
      display none;

  // Hide white tail of navbar dropdowns
  .navbar .pull-right > li > .dropdown-menu:after,
  .navbar .nav > li > .dropdown-menu.pull-right:after,
  .navbar .pull-left > li > .dropdown-menu:after,
  .navbar .nav > li > .dropdown-menu.pull-left:after
    border none
    display none