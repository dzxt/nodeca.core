
// Fix menu elements

@media (max-width: 979px)

  //Move logo to left on narrow screens
  .navbar .brand
    float left
    padding-left 10px

  // update search icon's offset
  .navbar-search
    .icon-search
      top 16px
      left 23px

  // remove active item underline
  .navbar .nav .active
    &:before
      display none

.hidden-phone-narrow {
}


@media (max-width: 767px)

  // Compensate offsets for debug block
  .debug
    margin-left -20px
    margin-right -20px

@media (max-width: 480px)
  .controlbar
    border 0 none
    padding-left 0
    padding-right 0
    background-color transparent
    box-shadow none