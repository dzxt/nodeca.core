
// Fix menu elements

@media (max-width: 979px)

  //Move logo to left on narrow screens
  .navbar .brand
    float left
    padding-left 10px

  // update search icon's offset
  .navbar-search
    .icon-search
      top 16px
      left 23px

  // remove active item underline
  .navbar .nav .active
    &:before
      display none;

@media (max-width: 767px)

  // Compensate offsets for debug block
  .debug
    margin-left -20px
    margin-right -20px
