@font-face {
  font-family: 'nodeca';
  src: url(<%= asset_path('vendor/fontello/src/font/nodeca.eot') %>);
  src: url(<%= asset_path('vendor/fontello/src/font/nodeca.eot') %>?#iefix) format('embedded-opentype'),
       url(<%= asset_path('vendor/fontello/src/font/nodeca.woff') %>) format('woff'),
       url(<%= asset_path('vendor/fontello/src/font/nodeca.ttf') %>) format('truetype'),
       url(<%= asset_path('vendor/fontello/src/font/nodeca.svg') %>#nodeca) format('svg');
  font-weight: normal; font-style: normal;
}

.icon-closed-after:after,
[class^="icon-"]:before, [class*=" icon-"]:before {
  font-family: "nodeca";
  speak: none;
  font-size: 120%;
  opacity: .7;
  text-shadow: 1px 1px 1px rgba(127, 127, 127, 0.3);

  display: inline-block;
  width: 1em;
  margin-right: .2em;
  text-align: center;
  line-height: 1em;

  font-style: normal !important;
  font-weight: normal !important;
}

/* collapsed icon-collapse -> icon-expand */
.collapsed .icon-collapse:before { content: '\25be'; } /* '▾' */
.collapsed .icon-expand:before { content: '\25b4'; } /* '▴' */

/* sometime we need lock icon after text */
.icon-closed-after:before { content: ''; display: none; }
.icon-closed-after:after {
  content: '\e803';
  margin-right: 0;
  margin-left: .2em;
  opacity: .5;
}
