//
// Horizontal comma-separated list
//
.hlist
  margin 0
  > li
    display inline
    &:after
      content ','
      margin-right .5em

//
// Universal container for page info
//
.page-summary
  margin-top 20px
  padding: 20px
  background-color #f5f5f5
  border-radius 4px
  border 1px solid #eee
  border 1px solid rgba(0,0,0,.05)
  box-shadow 0 0px 2px rgba(0,0,0,.05)
  color grayLight
  font-family sansWideFontFamily
  > dt
    font-weight normal
    color grayDark
    font-size 13px
  > dd + dt
    margin-top 10px
  > dd
    font-size 12px
    &.small
      font-size 11px

//
// Page footer styles
//
.footer
  margin-top 20px
  border-top 1px solid grayLightest
  padding-top 10px
  font-family sansWideFontFamily

.footer-nav
  margin 0
  > li
    margin-right 1em
    display block
    float left
    > a
      display block
      padding 4px 0
  .dropdown-toggle .caret
    margin-top 7px
    margin-left 1px

.copyright
  font-size 12px
  opacity .7
