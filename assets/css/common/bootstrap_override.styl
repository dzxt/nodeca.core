.navbar-fixed-top
  position static
  margin-bottom baseLineHeight

// Responsive button (3 lines) with pure css
.navbar .btn-navbar > span
  display block
  width 20px
  height 2px
  border-top 6px double navbarText
  border-bottom 2px solid navbarText
  margin 1px 0

// Brand text
.navbar .brand
  text-shadow 0 1px 0 rgba(255, 255, 255, 0.1), 0 0 30px rgba(255, 255, 255, 0.125)
  color black
  font-weight bold
  font-family sansWideFontFamily
  padding-left 0
  padding-right 0
  float right
