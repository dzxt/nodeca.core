.navbar-fixed-top
  position static
  margin-bottom baseLineHeight

// Responsive menu button (3 lines) with pure css
.navbar .btn-navbar > span
  display block
  width 20px
  height 2px
  border-top 6px double navbarText
  border-bottom 2px solid navbarText
  margin 1px 0

// Brand text
.navbar .brand
  //text-shadow 0 1px 0 rgba(255, 255, 255, 0.1), 0 0 30px rgba(255, 255, 255, 0.3)
  //color black
  color gray
  font-weight bold
  font-family sansWideFontFamily
  //padding-right 0
  //float right

// Buttons tweaks
.btn
  font-family sansWideFontFamily
  background-image none
  transition background-color 0.5s ease
  &.wide
    width 100%
    box-sizing border-box
    outline none
    // IE7 improvment
    padding-left 0
    padding-right 0
  &:hover
    transition background-color 0.5s ease
.btn-icon-only
  min-width 40px
  &:before
    margin 0
.btn-primary
  font-weight bold
.btn.disabled, .btn[disabled]
  opacity .4
.input-append
  whitespace nowrap

// Search icon
.navbar-search
  .search-query
    margin-bottom 0
    padding-top 2px
    padding-bottom 2px
    padding-left 25px
    font-size 14px
    border-radius 13px
    &:focus, &.focused
      padding-top 3px
      padding-bottom 3px
      padding-left 25px
      background-color grayLightest
  .icon-search
    position absolute
    top 4px
    left 8px
    &.focused
      color grayDark

// topnav underline for avtive item
.navbar .nav .active
  position relative
  &:before
    border-bottom 2px solid gray
    bottom 0px
    content ""
    height 2px
    position absolute
    width 100%

// Always use bottom margin only
.btn-toolbar
  margin-top 0