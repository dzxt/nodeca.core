@import "nodeca.core/client/admin/core/_variables"


body
  padding-top 60px

//
// Simple 2-columns layout
//
.main
  margin-left 210px
.sidebar-nav
  width 180px


// Show navbar dropdowns on hover, instead of click
//
.layout__navbar .dropdown:hover > .dropdown-menu
  height auto
  padding 5px 0
  opacity 1

// - hack `display to make opacity work
// - remove top margin to make hover work properly
.layout__navbar .dropdown > .dropdown-menu
  margin-top 0px
  display block
  height 0
  padding 0
  overflow hidden
  opacity 0
  transition opacity 0.3s ease


// "No JS" message styles
//
.nojs
  display none
  left 50%
  width 500px
  margin-left -250px
  text-align center
  position absolute
  top 90px
  font-size 36px
  font-weight bold
  line-height 1.5

.no-js .nojs
  display block
