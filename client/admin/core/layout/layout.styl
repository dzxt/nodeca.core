//  font-size 90%
//  margin-top 5px

// fix for links without href (with JS handlers)
//
a
  cursor pointer

// "No JS" message styles
//
.nojs
  display none
  left 50%
  width 500px
  margin-left -250px
  text-align center
  position absolute
  top 90px
  font-size 36px
  font-weight bold
  line-height 1.5

