- var name      = self.name
- var value     = self.value
- var handler   = self.handler
- var help_text = self.help_text

.row-fluid
  - if (handler)
    input(type="text", id='s_' + name, name='s_' + name, value=value, data-on-input=handler)
  - else
    input(type="text", id='s_' + name, name='s_' + name, value=value)

  - if (help_text)
    span.help-block #{help_text}
