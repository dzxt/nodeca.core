- var name      = self.name
- var value     = self.value
- var handler   = self.handler
- var help_text = self.help_text

//- type cast value
- if (value === '0' || value === 'false')
  - value = null

.switch
  - if (handler)
    input(type='hidden', name='s_' + name, value='0')
    input(type='checkbox', id='s_' + name, value='1', name='s_' + name, checked=value, data-on-change=handler)
  - else
    input(type='hidden', name='s_' + name, value='0')
    input(type='checkbox', id='s_' + name, value='1', name='s_' + name, checked=value)
  label(for='s_' + name, data-yes=self.t('yes'), data-no=self.t('no')): i

- if (help_text)
  span.help-block #{help_text}
