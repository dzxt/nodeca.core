.mdedit(data-on-dragdrop='core.mdedit:dd_' + self.editorId).no-attachments
  .mdedit__inner
    .mdedit-toolbar
      each button in self.buttons
        span.mdedit-toolbar__item(
          class=button.css_class
          title=button.tooltip ? self.t(button.tooltip) : ''
          data-command=button.command ? button.command : ''
        )
    .mdedit__edit-area
  .mdedit__resizer

  .mdedit__help!= self.t('drop_help')
  .mdedit__attachments
