.mdedit.mdedit__m-no-attachments(data-on-dragdrop='mdedit:dd')
  .mdedit__collapser(data-on-click='mdedit.collapse')
    .icon.icon-collapse
    .icon.icon-expand

  .mdedit__resizer

  .mdedit-header
    .mdedit-header__caption

  .mdedit__body

    .mdedit__editor
      .mdedit__toolbar
      .mdedit__edit-area

    ul.mdedit-attachments

    .mdedit__preview.markup

  .mdedit-footer
    button.btn.btn-primary(data-on-click='mdedit.submit')=self.t('submit')
    button.btn.btn-link(data-on-click='mdedit.cancel')=self.t('cancel')
