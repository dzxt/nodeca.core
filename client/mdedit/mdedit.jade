.mdedit(data-on-dragdrop='core.mdedit:dd_' + self.editorId)
  .mdedit__toolbar
    each button in self.buttons
      .mdedit-toolbar__item(
        class=button.css_class
        title=button.tooltip ? self.t(button.tooltip) : ''
        data-command=button.command ? button.command : ''
      )
  .mdedit__edit-area
  .mdedit__resize
  .mdedit__drop-help= self.t('drop_help')
  .mdedit__attachments
