.mdedit__toolbar
  margin-bottom 10px
  border-bottom 1px solid #e9e9e9

.mdedit-toolbar__item
  width 20px
  height 25px
  text-align center
  display inline-block
  margin-right 5px
  cursor pointer
  overflow hidden
  font-size 15px

.mdedit-toolbar__bold
  &:before
    content 'B'
  font-weight bold


.mdedit-toolbar__italic
  &:before
    content 'I'
  font-style italic

.mdedit-toolbar__sep
  width 1px
  border none
  background #e9e9e9
  cursor auto

.mdedit-toolbar__quote
  &:before
    content 'Â»'

.mdedit-toolbar__spoiler
  &:before
    content 'SP'

.mdedit-toolbar__ol
  &:before
    content 'OL'

.mdedit-toolbar__ul
  &:before
    content 'UL'

.mdedit-toolbar__header
  &:before
    content 'H'

.mdedit-toolbar__cut
  &:before
    content 'C'

.mdedit-toolbar__help
  &:before
    content '?'
