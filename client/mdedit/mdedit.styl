@import "nodeca.core/client/common/_variables"

.mdedit.active
  border 1px dotted #000000

.mdedit
  background white

.mdedit__edit-area
  min-height 150px
  width 100%

.mdedit__edit-area .ace_print-margin-layer
  display none

.mdedit__edit-area.ace_editor
  font-size 14px
  font-family monoFontFamily

.mdedit__resize
  height 9px
  width 100%
  background-color #eee
  cursor s-resize
  margin-top 2px

.mdedit__attachments
  width 100%
  overflow-y hidden
  overflow-x auto
  margin-top 10px
  padding-bottom 10px

.mdedit__attach-item
  width 80px
  height 70px
  border 1px solid #eee
  position relative
  cursor pointer
  margin-right 10px
  display inline-block
  vertical-align top
  overflow hidden

.mdedit__attach-remove
  position absolute
  top 2px
  right 2px
  color white
  &:before
    content 'Ã—'

.mdedit__attach-preview
  & > img
    width 100%
  & > p
    margin 3px
    word-wrap break-word
    text-align left
  overflow hidden

.mdedit__drop-help
  margin-top 5px
  text-align center
  border 1px solid
  padding 5px 15px
  border-color #dddddd
  border-radius 4px
