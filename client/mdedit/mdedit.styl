@import "nodeca.core/client/common/_variables"

.mdedit
  .ace_print-margin-layer
    display none
  //.ace_content
  //  padding-top 10px
  .ace_editor
    font-size 14px
    font-family monoFontFamily


.mdedit__inner
  background-color #fff
  border 1px solid grayLighter
  border-bottom none
  border-radius 4px 4px 0 0

.mdedit__edit-area
  min-height 150px
  width 100%

.mdedit__resizer
  height 9px
  background-color grayLightest
  cursor s-resize
  border-radius 0 0 4px 4px
  margin-bottom 5px
  text-align middle
  position relative
  &:before
  &:after
    content ' '
    width 40px
    height 1px
    background-color grayLighter
    position absolute
    left 50%
    top 3px
    margin-left -20px
  &:after
    top 5px

.mdedit__help
  text-align center
  font-size 12px
  color grayLighter


.mdedit-toolbar
  border-bottom 1px solid grayLightest
  padding 5px
  font-size 18px

.mdedit-toolbar__item
  text-align center
  display inline-block
  vertical-align middle
  cursor pointer
  width 1.7em
  height 1.5em
  line-height 1.5em
  border-radius 4px
  color gray
  transition .2s ease
  &:hover
    background-color grayLightest
    color grayDark

.mdedit-toolbar__sep
  width 1px
  height 1.2em
  background grayLightest
  cursor auto
  margin 0 .4em


.mdedit__attachments
  width 100%
  overflow-y hidden
  overflow-x auto
  margin-top 10px
  padding-bottom 10px

.mdedit__attach-item
  width 80px
  height 70px
  border 1px solid #eee
  position relative
  cursor pointer
  margin-right 10px
  display inline-block
  vertical-align top
  overflow hidden

.mdedit__attach-remove
  position absolute
  top 2px
  right 2px
  color white
  &:before
    content 'Ã—'

.mdedit__attach-preview
  & > img
    width 100%
  & > p
    margin 3px
    word-wrap break-word
    text-align left
  overflow hidden

.mdedit-preview
  border 1px dashed grayLight
  margin-top 20px
  padding 10px 10px 0
  border-radius 4px