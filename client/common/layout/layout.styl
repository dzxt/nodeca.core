@import "nodeca.core/client/common/_variables"

// this rule stretch background on short pages
html
body
  height 100%


body
  padding-top $nav-panel-height
  min-width 200px
  // Always show vertical scroll, to avoid small horizontal
  // jitter on change between short and long pages.
  overflow-y scroll

.layout__container
  max-width $page-max-width


// Debug output block at page bottom
//
.debug
  margin-top baseLineHeight
  padding (baseLineHeight/2) 20px 0
  background-color #fbfbf8
  border 1px solid #eee
  border 1px solid rgba(0,0,0,.05)
  box-shadow 0 -2px 2px rgba(0,0,0,.05)
  font-size 12px
  color #888


// "No JS" message styles
//
.nojs
.nocookies
  display none
  left 50%
  width 500px
  margin-left -250px
  text-align center
  position absolute
  top 90px
  font-size 24px
  font-weight bold
  line-height 1.4em
  z-index: 1000

.no-js .nojs
.no-cookies .nocookies
  display block
