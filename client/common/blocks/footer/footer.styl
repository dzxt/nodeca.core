@import "nodeca.core/client/common/_variables"


// Page footer styles
//
.page-footer
  margin-top baseLineHeight*2.5
  border-top 1px solid grayLightest
  padding-top (baseLineHeight/2)

.page-footer-nav
  margin 0 0 (baseLineHeight/4) 0
  padding 0
.page-footer-nav__item
  margin-right 1em
  display inline-block
  position relative
  float left

  & > .dropdown-toggle > .caret
    opacity .3

.page-footer__copyright
  font-size 12px
  opacity .7
