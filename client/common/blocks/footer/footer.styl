@import "nib"
@import "nodeca.core/lib/client/variables"


// Page footer styles
//
.page-footer
  margin-top 50px
  border-top 1px solid grayLightest
  padding-top 10px

.page-footer-nav
  margin 0
  > li
    margin-right 1em
    display block
    float left
    > a
      display block
      padding 4px 0
  .dropdown-toggle .caret
    margin-top 8px
    margin-left 2px
    opacity .3

.copyright
  font-size 12px
  opacity .7


// "No JS" message styles
//
.nojs
  display none
  left 50%
  width 500px
  margin-left -250px
  text-align center
  position absolute
  top 90px
  font-size 36px
  font-weight bold
  line-height 1.5

.no-js .nojs
  display block
