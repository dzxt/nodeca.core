// Bottom page info block
//

@import "nodeca.core/client/common/_variables"

.page-summary
  margin-top baseLineHeight
  padding baseLineHeight 20px (baseLineHeight/2)
  background-color #fbfbfb
  border-radius 4px
  border 1px solid #eee
  border 1px solid rgba(0,0,0,.05)
  box-shadow 0 0px 2px rgba(0,0,0,.05)
  color grayLight
  font-family sansWideFontFamily

.page-summary__head
  color grayDark
  font-size 13px

.page-summary__subhead
  font-size 11px
  margin-left 10px
  color grayLight

.page-summary__content
  font-size 12px
  margin-left 10px
  margin-bottom (baseLineHeight/2)
