// Quote style definitions

@import "nodeca.core/client/common/_variables"


.quote
  font-size 14px
  background-color #f8f8f8
  border-radius 4px

.quote__title
  margin-top -5px
  margin-right -10px
  padding 5px 0

.quote__author-avatar
  width 16px
  height 16px
  margin 0px 3px
  border-radius 2px

.quote__controls
  margin-top -3px
  .btn
    background-color transparent

.quote__collapse
  display none

.quote__ref-local
  display none

.quote__ref-local
.quote__ref-outer
  opacity .8
  color inherit

.quote__m-expanded
.quote__m-expanded > .quote__title > .quote__controls
  & > .quote__expand
    display none
  & > .quote__collapse
    display inline-block

.quote__m-local > .quote__title > .quote__controls
  & > .quote__ref-outer
    display none
  & > .quote__ref-local
    display inline-block
