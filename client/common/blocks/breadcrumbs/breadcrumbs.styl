@import "nodeca.core/client/common/_variables"


.breadcrumbs
  margin 0 0 (baseLineHeight/2)
  max-width 100%
  white-space nowrap
  overflow hidden
  font-size 16px
  list-style none
  padding 0
  line-height baseLineHeight*1.5
  display inline-block

.breadcrumbs__item
  display inline-block
  &:before
    content '/'
    color grayLighter
    margin 0 .6em 0 .5em

  &:first-child:before
    content ''
    margin 0

  &:last-child:after
    content '/'
    color grayLighter
    margin 0 .6em 0 .5em

.breadcrumbs__link
  color grayLight

// Collapse list midle elements on narrow screens
//
@media (max-width: screenXs - 1)
  .breadcrumbs__item
    display none
    &:first-child
    &:last-child
      display inline-block

  .breadcrumbs__item + .breadcrumbs__item + .breadcrumbs__item:last-child
    display inline-block
    &:before
      content '/ ... /'

// Add space between breadcrumbs buttons
//
.breadcrumbs .btn
    margin-right 4px
