@import "nodeca.core/client/common/_variables"

.breadcrumbs-line
  height 2rem
  background-color $gray-lightest
  margin-bottom 1rem

.breadcrumbs
  margin 0 0 1rem
  max-width 100%
  white-space nowrap
  overflow hidden
  font-size $font-size-xs
  list-style none
  padding 0
  line-height 2rem
  display inline-block

.breadcrumbs__item
  display inline-block
  &:before
    content '/'
    color $body-color-secondary
    margin 0 .6em 0 .5em

  &:first-child:before
    content ''
    margin 0

  &:last-child:after
    content '/'
    color $body-color-secondary
    margin 0 .6em 0 .5em

.breadcrumbs__link
  color $body-color-secondary

// Collapse list midle elements on narrow screens
//
@media (max-width: screenXs - 1)
  .breadcrumbs__item
    display none
    &:first-child
    &:last-child
      display inline-block

  .breadcrumbs__item + .breadcrumbs__item + .breadcrumbs__item:last-child
    display inline-block
    &:before
      content '/ ... /'

// Add space between breadcrumbs buttons
//
.breadcrumbs .btn
  margin-right 4px
