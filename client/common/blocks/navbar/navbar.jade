//- Horizontal site navigation

- var localizationPrefix = '@common.menus.navbar.';

- function compare(a, b) { return (a.info.priority || 100) - (b.info.priority || 100); }

- function sortedItems(items) {
-   var result = [];
-   Object.keys(items).forEach(function (name) {
-     if (!items[name]) { return; }
-     result.push({ name: name, info: items[name] });
-   });
-   return result.sort(compare);
- }

nav.navbar.navbar-dark.navbar-fixed-top.bg-primary
  .navbar-primary.layout__container.container-fluid
    .navbar-header
      button.navbar-toggler.hidden-md-up(
        data-toggle='collapse',
        data-target='.navbar-collapse',
        type='button'
      ) &#9776;

      a.navbar-brand(href="/") Nodeca

    .navbar-collapse.collapse.navbar-toggleable-sm
      ul.nav.navbar-nav
        each item in sortedItems(self.runtime.navbar)
          - var info = item.info;
          li.nav-item(data-api-path=info.to, data-autoselect=(info.autoselect === false ? 0 : 1))
            a.nav-link(href=self.link_to(info.to))= self.t(localizationPrefix + item.name)

        li.nav-item
          a.nav-link(href='https://github.com/nodeca/nodeca', target='_blank') Github

      ul.nav.navbar-nav.pull-xs-right
        li.nav-item
          a.nav-link.icon.icon-search(href='#', alt=self.t('search'))

        //- NOTE: This block is located in `nodeca.users`
        != self.partial('@common.blocks.navbar_auth')

  //- Alternative navbar container
  .navbar-alt.layout__container.container-fluid
