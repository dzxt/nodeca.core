// Toolbar with buttons

@import "nodeca.core/client/common/_variables"

// Container to preserve space, when controlbar become float
.controlbar
  height: 56px

// Hack bootstrap to avoid double padding
// on nested .container block for controlbar
.controlbar .container
  padding 0

.controlbar-body
  padding 10px 15px 10px
  background-color white
  border-radius 4px
  border 1px solid grayLighter
  box-shadow 0 0 2px #f8f8f8
  color grayLight

// floating state modificator
.controlbar.affix
  // Don't change global container position,
  // it should stay intact to reserver space
  position static

  .controlbar-floater
    position fixed
    width 100%
    max-width pageMaxWidth
    top 0
    margin-left -(navPanelWidth + (gridGutterWidth / 2))
    padding-left navPanelWidth
    z-index 1000

    background-color white

  .controlbar-body
    border 0
    border-bottom 1px solid grayLighter
    border-radius 0
    box-shadow 0 4px 2px -2px #f8f8f8
