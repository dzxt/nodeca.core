// Toolbar with buttons

@import "nodeca.core/client/common/_variables"

// Container to preserve space, when controlbar become float
.controlbar
  height: 55px
  margin-top: -10px

// Hack bootstrap to avoid double padding
// on nested .container block for controlbar
.controlbar .container
  padding 0

.controlbar__body
  margin-left 0
  padding-top    10px
  padding-bottom 10px
  background-color white
  border-bottom 1px solid grayLighter
  color grayLight

// floating state modificator
.controlbar.affix
  // Don't change global container position,
  // it should stay intact to reserver space
  position static
  // Reset style from bootstrap, to fix `position fixed` for children
  transform: none

  .controlbar__floater
    position fixed
    width 100%
    top 0
    z-index 1035
    background-color white

    // Show/hide animation parameters
    transition transform 0.2s linear

  // Hide controlbar on narrow screens
  @media only screen and (max-height: $grid-breakpoints.sm - 1)
    &.controlbar__m-scroll-down .controlbar__floater
      transform translateY(-100%)

  .controlbar__body
    border 0
    border-radius 0
    padding 10px 15px 10px

.controlbar.affix
  .controlbar__floater
    left 0
    right 0
    border-bottom 1px solid grayLighter
  .controlbar__floater-inner
    margin-left auto
    margin-right auto
    max-width $page-max-width
