// Toolbar with buttons

@import "nodeca.core/client/common/_variables"

// Container to preserve space, when controlbar become float
.controlbar-keeper
  height: 56px

// Hack bootstrap to avoid double padding
// on nested .container block for controlbar
.controlbar-keeper .container
  padding 0


.controlbar
  padding 10px 15px 10px
  //background-color lighten(grayLightest, 70%)
  background-color white
  border-radius 4px
  border 1px solid grayLighter
  box-shadow 0 0px 2px #f8f8f8
  color grayLight

//
// floating container
//
.floatbar-fixed
  position: fixed
  top 0
  left 0
  right 0
  z-index 1000

  //background-color lighten(grayLightest, 70%)
  background-color white
  border-bottom 1px solid grayLighter
  box-shadow 0 2px 2px #f8f8f8
  padding 0 20px

  // floating state modificator
  .controlbar
    border 0 none
    box-shadow none
    padding-left 0
    padding-right 0

