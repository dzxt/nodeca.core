script
  yepnope({
    load: "http://www.google.com/recaptcha/api/js/recaptcha_ajax.js",
    complete: function () {
      Recaptcha.create("#{self.runtime.recaptcha.public_key}", 'recaptcha_div', {
        theme: 'custom'
      });
    }
  });

.control-group.capcha-image
  .controls
    span#recaptcha_image
    div.capcha-reload
      a(tabindex=-1, href="javascript:Recaptcha.reload();Recaptcha.focus_response_field();")= self.t('common.recaptcha.change_image')

- var recaptcha_err_class = (!!self.errors && !!self.errors.recaptcha) ? 'error' : ''
.control-group(class=recaptcha_err_class)
  label.control-label(for='i_captcha')= self.t('common.recaptcha.captcha')
  .controls
    .row-fluid
      input.span12(id="recaptcha_response_field", name="recaptcha_response_field", type='text')
      - if (recaptcha_err_class!== '')
        span.help-block #{self.errors.recaptcha}
      - else
        span.help-block= self.t('common.recaptcha.captcha_help')
