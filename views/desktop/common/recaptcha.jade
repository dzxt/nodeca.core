script
  yepnope({
    load: "http://www.google.com/recaptcha/api/js/recaptcha_ajax.js",
    complete: function () {
      Recaptcha.create("#{self.runtime.recaptcha.public_key}", 'recaptcha_div', {
        theme: "#{self.runtime.recaptcha.theme}",
        custom_theme_widget: "#{self.runtime.recaptcha.custom_theme_widget}",
        lang : "#{self.runtime.recaptcha.lang}",
        callback: Recaptcha.focus_response_field
      });
    }
  });

.control-group.capcha-image
  .controls
    span#recaptcha_image
    div.capcha-reload: a(href="javascript:Recaptcha.reload()") Change image

.control-group
  label.control-label(for='i_captcha') Captcha code
  .controls
    .row-fluid
      input.span12(id="recaptcha_response_field", name="recaptcha_response_field", type='text')
      span.help-block Enter 2 words from the image above.

