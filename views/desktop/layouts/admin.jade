!!!
html.no-js
  head
    include ../common/head

    - if (self.head.assets.admin)
      each pkgName in self.head.assets.admin.loadingQueue
        - if (self.head.assets[pkgName].css)
          link(rel='stylesheet', href=self.head.assets[pkgName].css)

    //if lt IE 9
      script(type="text/javascript", src=self.asset_path('es5-shim.js'))

    script(type="text/javascript")
      !{self.asset_include('javascripts/loader.js')}
      loadAssets.init(!{JSON.stringify(self.head.assets)}, 'admin');

  body

    include ../admin/partials/_topnav_menu

    - if (self.menus.admin && self.menus.admin.navbar)
      nav.navbar.navbar-fixed-top
        .navbar-inner
          .container-fluid
            mixin topnav_menu(self.menus.admin.navbar)

    .container-fluid
      #content!= self.content

    .nojs
      .alert.alert-error #{self.t('common.nojs')}
