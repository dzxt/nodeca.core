html.no-js(itemscope, itemtype='http://schema.org/WebPage')
  head
    include ../widgets/head

    - for (var i in head.assets)
      - if ('css' === head.assets[i].type)
        link(rel='stylesheet', href=head.assets[i].link, media=head.assets[i].media)
        - head.assets[i].link = 'preload!' + head.assets[i].link

    script(type="text/javascript")!= asset_include('loader.js')

    script(type="text/javascript")
      window.REALTIME_ID = "!{random()}";
      nodeca.runtime.load(!{JSON.stringify(head.assets)});

  body
    nav.navbar.navbar-fixed-top
      .navbar-inner

        .container
          a.btn.btn-navbar(data-toggle='collapse', data-target='.nav-collapse')
            span

          a.brand(href="/") Nodeca

          .nav-collapse.collapse

            include ../widgets/navbar_menu

            form.navbar-search
              input.input-medium.search-query(type='text', placeholder='Search')
              .icon-search

            - if (menus.common.admin.length > 0)
              ul.nav
                - each item in menus.common.admin
                  li: a(href=item.link)= t(item.title)

            ul.nav.pull-right
              li.dropdown
                a.dropdown-toggle.icon-user(href='#', data-toggle='dropdown')
                  | vasya@pupkin.net
                  b.caret
                ul.dropdown-menu
                  li
                    a(href='#') Admin
                  li.divider
                  li
                    a(href='#') Settings
                  li
                    a.icon-ok(href='#') No images (fast)
                  li.divider
                  li
                    a(href='#') Exit


    .container

      div(data-nodeca-layout-content="default")!= content

      footer.page-footer
        ul.page-footer-nav.clearfix
          li
            a(href='#') About
