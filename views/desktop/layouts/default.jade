!!! 5
html.no-js(itemscope, itemtype='http://schema.org/WebPage')
  head
    include ../common/widgets/head

    each ns in ['common', self.head.apiPath.split('.').shift()]
      - if (self.head.assets[ns])
        each asset in self.head.assets[ns].css
          link(rel='stylesheet', href=asset)

    //if lt IE 9
      script(type="text/javascript", src=self.asset_path('es5-shim.js'))

    script(type="text/javascript")
      !{self.asset_include('loader.js')}
      loadAssets.init(!{JSON.stringify(self.head.assets)}, '!{self.head.apiPath.split(".").shift()}');

    script(type="text/javascript")
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-26895916-2']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();

  body
    nav.navbar.navbar-inverse.navbar-fixed-top
      .navbar-inner

        .container
          a.btn.btn-navbar(data-toggle='collapse', data-target='.nav-collapse')
            span

          a.brand(href="/") Nodeca

          .nav-collapse.collapse

            include ../common/widgets/navbar_menu

            form.navbar-search
              input.input-medium.search-query(type='text', placeholder='Search')
              .icon-search

            - if (self.menus.common.admin.length > 0)
              ul.nav
                - each item in self.menus.common.admin
                  li: a(href=item.link, target='_blank')= self.t(item.title)

            ul.nav.pull-right
              li.dropdown
                - if (self.profile)
                  include ../common/widgets/autorized
                - else
                  include ../common/widgets/login
               


    #content.container!= self.content

    footer.container.page-footer
      ul.page-footer-nav.clearfix
        li: a(href='#') About
        li: a(href='#') Contacts
        li: a(href='#') Terms
        li: a(href='#') Help

        li.dropup
          a.dropdown-toggle(href='#',data-toggle='dropdown') Language
            b.caret
          ul.dropdown-menu
            li
              a(href='#') English
            li
              a(href='#') Russian

        li.dropup
          a.dropdown-toggle(href='#',data-toggle='dropdown') Theme
            b.caret
          ul.dropdown-menu
            li: a(href='#') Black & White
            li: a(href='#') Yellow

      p.copyright
        | Powered by 
        a(href='#') Nodeca
        | , social platform by 
        a(href='#') RC Design


    .debug
      .container
